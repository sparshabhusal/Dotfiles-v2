/* Rofi Config */

@theme "~/.config/rofi/color.rasi"

configuration {
    modi: "drun";
    show-icons: true;
    display-drun: "ï€‚ ";
    drun-display-format: "{name}";
}

* {
    background-color: #00000095;
    text-color:         @fg0;
    font: "Radio Canada Big 12";
    margin:     0px;
    padding:    0px;
    spacing:    0px;
}

window {
    location:       north;
    y-offset:       calc(50% - 176px);
    width:          480;
    border: 1px;
    border-color: #ffffff;
    border-radius:  24px;
}

mainbox {
    padding:    12px;
}

inputbar {
    background-color:   transparent;
    border:         1px;
    border-color: #ffffff; 
    border-radius:  16px;
    padding:    8px 16px;
    spacing:    8px;
    children:   [ prompt, entry ];
}

prompt {
    background-color: transparent;
}

entry {
    background-color: transparent;
    font: "Radio Canada Big 13";
}

message {
    background-color: transparent;
    margin:             12px 0 0;
    border-radius:      16px;
    border-color:       @bg2;
}

textbox {
    background-color: transparent;
    padding:    8px 24px;
}

listview {
    background-color:   transparent;
    margin:     12px 0 0;
    lines:      8;
    columns:    1;
    fixed-height: false;
}

element {
    background-color: transparent;
    padding:        8px 16px;
    spacing:        8px;
    border-radius:  16px;
}

element normal active {
    background-color: transparent;
    text-color: @bg3;
}

element alternate active {
    background-color: transparent;
    text-color: @bg3;
}

element selected normal, element selected active {
    background-color: transparent;
    border:         1px;
    border-color: #ffffff;
    border-radius: 16px;
}

element-icon {
    background-color: transparent;
    size:           22px;
    vertical-align: 0.5;
}

element-text {
    background-color: transparent;
    text-color: inherit;
}
